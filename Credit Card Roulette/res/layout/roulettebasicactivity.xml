<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/woodbackgroundblack">
    <com.google.ads.AdView 
    	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    	android:id="@+id/russianVersionAdView" 
    	android:layout_width="fill_parent" 
    	android:layout_weight="0" 
    	android:layout_height="wrap_content"
    	ads:adUnitId="a14df827682b908"
        ads:adSize="BANNER"/>
    	


    <ViewFlipper android:layout_height="match_parent" android:id="@+id/viewFlipper1" android:layout_width="match_parent" android:layout_weight="1" android:paddingRight="50dip" android:paddingLeft="50dip">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/shooting_target" android:gravity="center|bottom" android:id="@+id/rouletteBasicActivityImageView">
            <TextView android:layout_width="wrap_content" android:text="Corey Murphy" android:layout_height="40dip" android:textSize="18dip" android:id="@+id/rouletteBasicActivityNameLBL"></TextView>
        </LinearLayout>
    </ViewFlipper>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_weight="0" android:gravity="center">
        <Button android:text="Pull Trigger" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rouletteBasicActivityFireBTN"></Button>
    </LinearLayout>
   
</LinearLayout>
